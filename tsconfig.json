{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": false,
    "declarationMap": false,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "listEmittedFiles": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "lib": [
      "es6",
      "es5",
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "types": [
      "node",
      "reflect-metadata",
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}